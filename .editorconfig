# For more information look here: http://EditorConfig.org, find plugins for your editor here: http://editorconfig.org/#download

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# JavaScript
[*.js]
indent_style = tab

# Styles
[{*.less,*.scss,*.css}]
indent_style = tab

# Matches the exact files either package.json or .travis.yml
[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
